<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/bgitemdoes"
    android:orientation="horizontal"
    android:layout_marginBottom="20dp"
    android:layout_height="100dp">
    <LinearLayout
        android:layout_marginLeft="16dp"
        android:orientation="vertical"
        android:layout_width="220dp"
        android:layout_height="match_parent">
    <TextView
        android:id="@+id/titledoes"
        android:layout_marginTop="19dp"
        android:textSize="22dp"
        android:textColor="#000C5D"
        android:text="Alışveriş yap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/descdoes"
            android:layout_marginTop="8dp"
            android:textSize="18sp"
            android:textColor="#ADADAD"
            android:text="Yakınındaki marketten alabilirsin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp">
        <TextView
            android:id="@+id/adddate2"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:textSize="15sp"
            android:textColor="#F63EA5"
            android:layout_marginTop="8dp"
            android:text="Yarın" />


    </LinearLayout>




</androidx.appcompat.widget.LinearLayoutCompat>